div.card {
  border:1px solid black;
  border-radius:4px;
  height:100px;
  width:60px;
  display:inline-block;
}

div.hand {
  border:2px solid #eee;
  margin:1em;
}

div.card[suit='Diamond'] {
  background:#faa;
}

div.card[suit='Heart'] {
  background:#f88;

}

div.card[suit='Spade'] {
  background:#222;
  color:#eee;
}

div.card[suit='Club'] {
  background:#252;
  color:#eee;
}

div.card.drop-placeholder { opacity: 0.5 ; }

div#discard-pile {
  border:2px solid red;  
  display:  normal;
  top: 40%;
  right: 10%;
  width: 80px;
  height: 110px;
  overflow: nowrap;
  position: absolute;
}