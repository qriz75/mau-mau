#cardTable {
  display: block;
  background-image: url("/cop4813/img/cards/table.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  height: 750px;
  width: auto;
  position: relative;
  overflow: auto;
}

#dropZone1 {
  display: block;
